<!-- Page Width -->
<div class="container" style="width:97%">

<div class="row">

    <!-- Loop that Iterates through all a User's Items -->
    <% @items.each do |item| %>

      <!-- Auto-Resizing Grid -->
      <div class="col s12 m6 l4">
        <div class="card">

          <!-- Card Background -->
          <div class="card-image waves-effect waves-block waves-light" style="height:250px; background-image: url(<%= item.url %>); background-position:center; background-size:cover">
            <img class="activator" src="" style="position:center;min-height:250px; min-width:100%">
          </div>

          <!-- Item Info -->
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">
              <%= item.name %>
              <i class="material-icons right">more_vert</i>
            </span>
            <br>
            <%= item.retailer %>
          </div>

          <!-- Additional Item Info Hidden Until Clicked -->
          <div class="card-reveal">

            <!-- Item Info -->
            <span class="card-title grey-text text-darken-4">
              <%=item.name%>
              <i class="material-icons right">close</i>

              <!-- Show Item Modal Trigger -->
              <a class="modal-trigger" href="#modal"><i class="material-icons right" style="color:#000000">open_in_new</i></a>

            </span>
            <br>

            <!-- Links to Item Actions Placeholder -->
            <td><%= link_to 'More Info', item %></td>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            <!-- Product Info Placeholder -->
            <br><br>  Product Info <br><br>
            The quick brown fox jumps over the lazy dog.
          </div>
        </div>
      </div>

    <% end %>
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">

  <!-- Floating Action Button -->
  <a class="btn-floating btn-large deep-purple lighten-2">
    <i class="large material-icons">add</i>
  </a>

  <ul>

    <!-- New from URL Button -->
    <li>
      <a class="btn-floating deep-purple lighten-2 modal-trigger" href="#modal-new">
        <i class="material-icons right">insert_link</i>
      </a>
    </li>

    <!-- New from Input Button -->
    <li>
      <%= link_to new_item_path, :class=>"btn-floating deep-purple lighten-2" do %>
      <i class="material-icons">mode_edit</i>
      <% end %>
    </li>

  </ul>

</div>

<!-- New Item Modal -->
<div id="modal-new" class="modal bottom-sheet">
  <div class="modal-content">
    <%= render 'form' %>
  </div>
</div>

<!-- Show Item Modal Placeholder -->
<div id="modal" class="modal modal-bottom-footer">
   <div class="modal-content">
     <h4>Render 'Show Partial'</h4>
     <p>The quick brown fox jumps over the lazy dog.</p>
   </div>
   <div class="modal-footer">
     <a href="#!"class="modal-action modal-close waves-effect waves-deep-purple btn-flat ">Close</a>
   </div>
 </div>

 </div>
